@model WebTaskManagerEfDb.ViewModels.Users.UsersListVM

@{
    ViewBag.Title = "Users";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create new user", "Edit", "UserManagerController", new { @class = "btn btn-success" })
</p>
<hr/>
@Html.Partial("_PartialFilter", Model.Filter)
<br />

<table class="table table-hover sortable">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Username</th>
        <th>Admin Status</th>
        <th>Operations</th>
    </tr>

    @foreach (var item in Model.Items)
    {
        <tr>
            <td>
                @item.FirstName
            </td>
            <td>
                @item.LastName
            </td>
            <td>
                @item.Username
            </td>
            <td>
                @item.AdminStatus
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>

<div>
    @Html.Partial("_PagingPartial", Model.Pager)
</div>